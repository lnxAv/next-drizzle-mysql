{
  "name": "nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prettier": "npx prettier --write --ignore-path .gitignore .",
    "migrate": "drizzle-kit generate:mysql && echo [Linting /database] && npx next lint --fix --dir database",
    "drop": "drizzle-kit drop && echo [Linting /database] && npx next lint --fix --dir database",
    "check-db": "drizzle-kit check:mysql",
    "pull-db": "drizzle-kit introspect:mysql && echo [Linting /database] && npx next lint --fix --dir database",
    "push-db": "drizzle-kit push:mysql",
    "studio-db": "drizzle-kit studio",
    "prepare": "husky install"
  },
  "dependencies": {
    "drizzle-orm": "^0.29.1",
    "mysql2": "^3.6.5",
    "next": "14.0.4",
    "next-international": "^1.1.4",
    "next-themes": "^0.2.1",
    "react": "^18",
    "react-dom": "^18",
    "swr": "^2.2.4"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.100",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.16",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.20.6",
    "eslint": "^8.2.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "tailwindcss": "^3.4.0",
    "typescript": "^5"
  }
}
